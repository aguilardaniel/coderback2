<div class="container my-5">
  <div class="row align-items-start">
    
    <!-- Imagen del producto -->
    <div class="col-md-6 mb-4 mb-md-0 text-center">
      <img src={{product.image}} alt={{product.title}} class="img-fluid rounded shadow" style="max-height: 450px; object-fit: cover;">
    </div>
    
    <!-- InformaciÃ³n del producto -->
    <div class="col-md-6">
      <a href="/" class="text-primary d-block mb-3">Ver Todos los Productos</a>
      
      <div class="p-4 bg-white border rounded shadow-sm">
